[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart=/harness/bin/prometheus-2.29.1.linux-amd64/prometheus \
    --config.file /harness/configs/prometheus/prometheus.yaml \
	--storage.tsdb.path /data/prometheus/

[Install]
WantedBy=multi-user.target
